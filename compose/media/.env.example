# ===== Shared =====
TZ=America/Chicago
PUID=1000
PGID=1000

# ===== Gluetun (ProtonVPN WireGuard) =====
# Fill from your Proton WireGuard config
VPN_SERVICE_PROVIDER=protonvpn
VPN_TYPE=wireguard
VPN_PORT_FORWARDING=on
GLUETUN_HTTP_CONTROL_SERVER_ENABLE=on

# Required by Proton WireGuard:
WIREGUARD_PRIVATE_KEY=EXAMPLE_BASE64_PRIVATE_KEY
# VERIFY: Often required; use the Address/CIDR from your WireGuard config, e.g. 10.x.x.x/32
WIREGUARD_ADDRESSES=10.2.0.2/32

# Server selection (example)
SERVER_COUNTRIES=Netherlands

# ===== qBittorrent WebUI =====
QBIT_WEBUI_PORT=8080

# ===== qSticky auth (Gluetun control server) =====
# Must match compose/media/gluetun/config.toml
GLUETUN_AUTH_TYPE=apikey
GLUETUN_APIKEY=EXAMPLE_GLUETUN_API_KEY

# qBittorrent credentials (set in qB UI after first login)
QBITTORRENT_USER=admin
QBITTORRENT_PASS=change_me_now

# ===== Service ports (LAN only) =====
JELLYFIN_PORT=8096
SONARR_PORT=8989
RADARR_PORT=7878
PROWLARR_PORT=9696
BAZARR_PORT=6767
OVERSEERR_PORT=5055
