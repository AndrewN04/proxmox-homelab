# Timezone
TZ=America/Chicago

# Database (MariaDB)
MARIADB_ROOT_PASSWORD=example_root_password_use_a_password_manager
MARIADB_DATABASE=romm
MARIADB_USER=romm-user
MARIADB_PASSWORD=example_db_user_password

# RomM app env (must match db)
DB_NAME=romm
DB_USER=romm-user
DB_PASSWD=example_db_user_password

# Generate and paste output from:
#   openssl rand -hex 32
ROMM_AUTH_SECRET_KEY=03a054b6ca27e0107c5eed552ea66becd9f3a2a8a91e7595cd462a593f9ecd09

# Optional metadata providers (recommended by RomM docs)
SCREENSCRAPER_USER=
SCREENSCRAPER_PASSWORD=
RETROACHIEVEMENTS_API_KEY=
STEAMGRIDDB_API_KEY=
HASHEOUS_API_ENABLED=true

# Published port (LAN only). RomM container listens on 8080.
ROMM_PORT=8484

# Host paths on OMV VM
ROMM_LIBRARY_PATH=/data/roms
ROMM_ASSETS_PATH=/data/appdata/romm/assets
ROMM_CONFIG_PATH=/data/appdata/romm/config
